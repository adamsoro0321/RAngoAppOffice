<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.visitAvantLouerActivity">

    <LinearLayout
        android:id="@+id/shwo_guide_conatain"
        android:layout_gravity="center"
        android:visibility="gone"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/shwo_guide"
            android:layout_width="@dimen/trois_cent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" />
        <ProgressBar
            android:id="@+id/pro_la"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/container_int_con"
        android:layout_width="@dimen/linear_heigth"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/appbar_padding"
        android:orientation="vertical">

        <TextView
            android:id="@+id/condition_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/accepted_condition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/quinz"
            android:text="Trouver un guide" />


    </LinearLayout>




</LinearLayout>