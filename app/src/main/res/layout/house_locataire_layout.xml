<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/trois_cent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_layout"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/appbar_padding_top">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_loca"
                android:layout_width="@dimen/cinquant"
                android:layout_height="@dimen/cinquant" />
            <TextView
                android:id="@+id/locat_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="name" />


        </LinearLayout>

        <ImageView
            android:id="@+id/chat_whit_loca"
            android:layout_width="@dimen/cinquant"
            android:layout_height="@dimen/cinquant"
            android:src="@drawable/add_comment__foreground" />
       </LinearLayout>

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/scrollbarSize"
        android:background="@color/grey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/appbar_padding_top">

        <ImageView
            android:id="@+id/img_house"
            android:layout_width="@dimen/deux_cent_cinq"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/categorie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="categori_h" />

        <TextView
            android:id="@+id/lieu_h"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lieu" />

    </LinearLayout>

</LinearLayout>