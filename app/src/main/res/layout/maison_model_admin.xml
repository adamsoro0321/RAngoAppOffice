<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/car_main_coitain"
    android:layout_width="@dimen/cent_cinq"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    app:cardUseCompatPadding="true">

    <ImageView
        android:id="@+id/menu_item"
        android:layout_width="@dimen/appbar_padding"
        android:layout_height="@dimen/appbar_padding"
        android:layout_gravity="right|top"
        android:src="@drawable/menu_" />
    <LinearLayout
        android:id="@+id/second_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp">

        <ImageView
            android:id="@+id/img_frag"
            android:layout_width="match_parent"
            android:layout_height="@dimen/cent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="bottom"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_categotori"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/text_describ_frag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/text_adress_frag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/text_loyer_frag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:gravity="end"
                android:textColor="#B71C1C" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>

