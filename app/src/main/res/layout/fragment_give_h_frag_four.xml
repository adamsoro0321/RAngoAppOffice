<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.giveHLFragment.GiveHFragFour">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <LinearLayout
        android:id="@+id/add_main_img"
        android:layout_width="match_parent"
        android:layout_height="@dimen/linear_heigth"
        android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="cliquer ici pour ajouter une photo principale"
            android:textSize="10sp" />

        <ImageView
            android:id="@+id/img_id"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_horizontal_margin">

        <TextView
            android:id="@+id/categori_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/nav_header_vertical_spacing"
            android:layout_marginTop="@dimen/nav_header_vertical_spacing"
            android:layout_marginEnd="@dimen/nav_header_vertical_spacing"
            android:layout_marginBottom="@dimen/nav_header_vertical_spacing"
            android:text="categori"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/loyer_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="@dimen/nav_header_vertical_spacing"
            android:padding="@dimen/otp_view_item_spacing"
            android:text="20000"
            android:textColor="@color/red1" />

        <TextView
            android:id="@+id/desc_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/categori_id"
            android:layout_marginStart="@dimen/nav_header_vertical_spacing"
            android:layout_marginTop="@dimen/nav_header_vertical_spacing"
            android:layout_marginEnd="@dimen/nav_header_vertical_spacing"
            android:layout_marginBottom="@dimen/nav_header_vertical_spacing"
            android:text="description"
            android:textColor="@color/purple_700"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/adress_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/desc_id"
            android:layout_marginStart="@dimen/nav_header_vertical_spacing"
            android:layout_marginTop="@dimen/nav_header_vertical_spacing"
            android:layout_marginEnd="@dimen/nav_header_vertical_spacing"
            android:layout_marginBottom="@dimen/nav_header_vertical_spacing"
            android:text="koudougou , secteur 8"
            android:textSize="18sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/karante"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/otp_view_item_radius"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_add_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:text="valider"
            android:textSize="10sp" />

        <Button
            android:id="@+id/btn_mdf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:text="Modifier" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/karante"
        android:orientation="vertical">

        <TextView
            android:id="@+id/rdm_add_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nous vous recommandons d'ajouter des photos."
            android:textColor="@color/red" />
    </LinearLayout>
  </LinearLayout>


</LinearLayout>