<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activity.dashboardActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/appbar_padding_top"
    android:paddingStart="@dimen/appbar_padding_top"
    android:orientation="vertical">
   <include layout="@layout/convert_compt"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/appbar_padding_top"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/busin_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/appbar_padding_top"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/cent"
                    android:layout_margin="@dimen/appbar_padding_top"
                    android:src="@drawable/business_center_foreground"
                    android:contentDescription="TODO" />

                <TextView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="RAngo Business"
                    android:textColor="@color/black"
                    android:textSize="16sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/appbar_padding_top"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/g_h_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/appbar_padding_top"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/cent"
                    android:layout_margin="@dimen/appbar_padding_top"
                    android:src="@drawable/home_add_foreground"
                    android:contentDescription="TODO" />


                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Donner une Maison en location"
                    android:textColor="@color/black"
                    android:textSize="12sp" />
      </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/guide_box"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_guider"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/appbar_padding_top"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/guide_list_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/appbar_padding_top"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/guide_icon_"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/cent"
                    android:src="@drawable/guie_bike_foreground"
                    android:contentDescription="TODO" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Guider"
                    android:textColor="@color/black"
                    android:textSize="18sp" />


            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/appbar_padding_top"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/appbar_padding_top"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/cent"
                    android:src="@drawable/alarm_add_foreground"
                    android:contentDescription="TODO" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:layout_gravity="center_horizontal"
                    android:text="Guide"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <Switch
                    android:id="@+id/is_guide_swi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="@dimen/appbar_padding_top"
                    android:checked="false"
                    android:text="disponible" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/owner_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_maison_louer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/appbar_padding_top"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/appbar_padding_top"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_replace_aucun"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/cent"
                    android:contentDescription="TODO"
                    android:src="@drawable/home_add_foreground" />

                <TextView
                    android:id="@+id/replace_aucun_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gestion"
                    android:textColor="@color/black" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_locataire"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/appbar_padding_top"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/appbar_padding_top"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/cent"
                    android:src="@drawable/notif_icon_foreground"
                    android:contentDescription="TODO" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Pour vous"
                    android:textColor="@color/black"
                    android:textSize="18sp" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <TextView
        android:id="@+id/read_condition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/appbar_padding_top"
        android:layout_gravity="bottom"
        android:gravity="bottom"
        android:text="Lire  les conditions d'utilisation de la plateforme"
        android:textColor="@color/red" />
</LinearLayout>
</ScrollView>