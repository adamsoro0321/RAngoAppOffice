<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">




        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/cent"
            android:paddingStart="@dimen/appbar_padding">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_profil_user"
                android:layout_width="@dimen/cent"
                android:layout_height="@dimen/cent"
                android:layout_alignParentStart="true"
                android:layout_marginStart="@dimen/appbar_padding_top"
                android:layout_marginTop="@dimen/appbar_padding_top"
                android:layout_marginEnd="@dimen/appbar_padding_top"
                android:layout_marginBottom="@dimen/appbar_padding_top"
                android:maxHeight="@dimen/cinquant" />

            <TextView
                android:id="@+id/user_profil_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/img_profil_user"
                android:textColor="@color/black"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/user_numer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/user_profil_name"
                android:layout_toEndOf="@id/img_profil_user" />

        </RelativeLayout>
        <View
            android:id="@+id/view"
            android:background="@color/grey"
            android:layout_width="match_parent"
            android:layout_height="4dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/special_back"
            android:orientation="horizontal"
            android:padding="@dimen/appbar_padding_top">

            <ImageView
                android:layout_width="@dimen/cinquant"
                android:layout_height="@dimen/cinquant"
                android:src="@drawable/home_add_foreground" />

            <LinearLayout
                android:id="@+id/lin_maison_louer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/special_back"
                android:orientation="vertical"
                android:padding="@dimen/appbar_padding_top">

                <TextView
                    android:id="@+id/maison_l"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Maison louer"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/maison_loue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:text="@string/aucun" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/special_back"
            android:orientation="horizontal"
            android:padding="@dimen/appbar_padding_top">

            <ImageView
                android:layout_width="@dimen/cinquant"
                android:layout_height="@dimen/cinquant"
                android:src="@drawable/guie_bike_foreground" />

            <LinearLayout
                android:id="@+id/lin_guide"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/special_back"
                android:orientation="vertical"
                android:padding="@dimen/appbar_padding_top">

                <TextView
                    android:id="@+id/guide_c"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Guide contacter"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/guide_con"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:text="@string/aucun" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/special_back"
            android:orientation="horizontal"
            android:padding="@dimen/appbar_padding_top">

            <ImageView
                android:layout_width="@dimen/cinquant"
                android:layout_height="@dimen/cinquant"
                android:src="@drawable/add_comment__foreground" />

            <TextView
                android:id="@+id/btn_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:text="vos commentaires"
                android:textColor="@color/black"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/special_back"
            android:orientation="horizontal"
            android:padding="@dimen/appbar_padding_top">

            <ImageView
                android:layout_width="@dimen/cinquant"
                android:layout_height="@dimen/cinquant"
                android:src="@drawable/add_assistant_foreground" />

            <TextView
                android:id="@+id/btn_assitant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:text="assistance en ligne"
                android:textColor="@color/black"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/appbar_padding_top">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/cinquant"
                    android:layout_height="@dimen/cinquant"
                    android:src="@drawable/add_contact_phone_foreground" />

                <TextView
                    android:id="@+id/call_contact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contacter nous "
                    android:textColor="@color/black"
                    android:textSize="24sp" />

                <ImageView
                    android:id="@+id/expand_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_baseline_expand_more_24" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/contain_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/appbar_padding"
                android:orientation="vertical"
                android:paddingStart="@dimen/appbar_padding"
                android:visibility="gone">

                <TextView
                    android:id="@+id/num1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autoLink="phone"
                    android:inputType="phone"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/num2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autoLink="phone"
                    android:inputType="phone"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/num3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autoLink="phone"
                    android:inputType="phone"
                    android:textSize="18sp" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/modifi_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/special_back"
            android:orientation="horizontal"
            android:padding="@dimen/appbar_padding_top">

            <ImageView
                android:layout_width="@dimen/cinquant"
                android:layout_height="@dimen/cinquant"
                android:src="@drawable/add_security_foreground"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:text="Confidentialité des données"
                android:textColor="@color/black"
                android:textSize="20sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/appbar_padding_top">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="@dimen/cinquant"
                android:layout_height="@dimen/cinquant"
                android:src="@drawable/add_update_foreground" />

            <TextView
                android:id="@+id/btn_mjr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mettre à jour"
                android:textColor="@color/black"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/appbar_padding_top">

            <ImageView
                android:layout_width="@dimen/cinquant"
                android:layout_height="@dimen/cinquant"
                android:src="@drawable/add_log_off_foreground" />

            <TextView
                android:id="@+id/d_conect"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="Deconnexion"
                android:textColor="@color/black"
                android:textSize="24sp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>